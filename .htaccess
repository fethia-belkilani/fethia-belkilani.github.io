RewriteEngine on
RewriteBase / 

#if not already blog.website.com
#RewriteCond %{HTTP_HOST} !^blog\.fethiabelkilani\.com$ [NC] 
#if request is for blog/, go to blog.website.com
#RewriteRule  ^blog/$ http://blog.fethiabelkilani.com [L,NC,R=301] 
#RewriteCond %{HTTP_HOST} ^blog\.fethiabelkilani\.com$   [NC]
#RewriteRule ^ https://fethiabelkilani.com/blog  [L,R]

RewriteCond %{HTTPS} !on
RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

#Angular rewrites
RewriteCond %{REQUEST_FILENAME} -s [OR]
RewriteCond %{REQUEST_FILENAME} -l [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^.*$ - [NC,L]

# If the requested pattern is file and file doesn't exist, send 404.
# This fixes the issue with Angular being included more than once
# when you get the path of a component template wrong.
RewriteCond %{REQUEST_URI} ^(\/[a-z_\-\s0-9\.]+)+\.[a-zA-Z]{2,4}$
RewriteRule ^ - [L,R=404]

RewriteRule ^(.*) /index.html [NC,L]

